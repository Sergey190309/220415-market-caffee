  "version": "0.2.0",
  "configurations": [
    {
        "name": "Debug test",
        "type": "python",
        "request": "test",
        // "console": "externalTerminal",
        "justMyCode": false,
        "stopOnEntry": true,
        "envFile": "${workspaceFolder}/.env.test",
    },
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      // "console": "externalTerminal",
      "module": "flask",
      "env": {
        "FLASK_APP": "wsgi.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": [
        "run",
        "--no-debugger"
        // "--no-reload"
      ],
      "jinja": true
    }
  ]
}