{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
        // "jest/globals": true
    },
    "extends": [
        "eslint:recommended",  // new 211203
        "plugin:react/recommended",
        "plugin:jest/recommended",  // new 211203
        // "plugin:jest/style",  // new 211203
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        // "babel", // new 211203
        "react"
        // "jest"
    ],
    "rules": {
        "quotes": [
            "warn",
            "single"
        ],
        "no-unused-vars": "warn",
        "camelcase": "off",
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "warn",
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error",
        "jest/expect-expect": "off"
    }
}
